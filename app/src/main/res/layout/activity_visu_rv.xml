<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VisuRvActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="40dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Rapport de visite : "/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvRapNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Numéro du rapport : "/>

            <TextView
                android:id="@+id/tvRapDateVisite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date de la visite : "/>

            <TextView
                android:id="@+id/tvPraNom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom du praticien : "/>

            <TextView
                android:id="@+id/tvPraPrenom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prénom du praticien : "/>

            <TextView
                android:id="@+id/tvPraVille"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ville du praticien : "/>


            <TextView
                android:id="@+id/tvPraCp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Code postal : "/>

            <TextView
                android:id="@+id/tvCoefConfiance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coefficient de confiance : "/>

            <TextView
                android:id="@+id/tvRapBilan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bilan : "/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>